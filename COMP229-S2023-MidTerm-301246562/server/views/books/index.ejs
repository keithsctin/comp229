<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->
          <!-- ------------------------ -->
          <!--Q1.1a after click the buttob, go to /add route in routes/details.js-->
          <a href="/books/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a book</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center">Update</th> <!--added "Update" field-->
                  <th class="text-center">Delete</th> <!--added "Delete" field-->
                </tr>
              </thead>
              <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                  <tr>
                    <td><%= books[count].Title %></td>
                    <td class="text-center">$<%= books[count].Price %></td>
                    <td class="text-center"><%= books[count].Author %></td>
                    <td class="text-center"><%= books[count].Genre %></td>
                    <td class="text-center">  <!--Q1.1b route to /:id for update-->
                        <a href="/books/<%= books[count]._id %>" class="btn btn-primary">Edit</a>
                    </td>
                    <td class="text-center">  <!--Q1.1c route to /delete:id for deletion-->
                      <a href="/books/delete/<%= books[count]._id %>" class="btn btn-primary"
                      onclick="return confirm('Please click OK to confirm to remove it.')">Delete</a>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

